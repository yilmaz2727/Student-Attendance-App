@using System.Security.Cryptography

@model IEnumerable<SauApp.Models.Student>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


</head>

<body>

    <div class="row">
        <div class="col-sm-4" style="background-color: rgb(210, 211, 208)">Class : @ViewBag.CoursCode -
            @ViewBag.CoursName</div>
        <div class="col-sm-4" style="background-color: rgb(160, 161, 158)">Today: @ViewBag.CoursDate</div>
        <div class="col-sm-4" style="background-color: rgb(210, 211, 208)">Number of Attendants =
            @ViewBag.NumberOfAccepts</div>
    </div>


    <h2> </h2>
    <h3></h3>
    <h4 class="text text-muted"></h4>

    <table  class="table table-bordered w-100 m-0" >
        <thead>
            <tr>
                <th><b>Signed Students :</b></th>
                <th>ID
            </tr>
            </th>
        </thead>
        <tbody>
            @foreach (var i in (Model ?? Enumerable.Empty<SauApp.Models.Student>()))
            {
                if (i?.Signed == true)
                {
                    <tr>
                        <td>@i.Name @i.Surname</td>
                         <td>@i.StudentID</td>
                    </tr>
                    
                       
                    
                }
            }
        </tbody>
    </table>


    <span><a class="btn btn-info" asp-controller="Student" asp-action="Register"> Click To Sign</a></span>


    <span> <a class="btn btn-info" asp-controller="Student" asp-action="Index"> All Student</a></span>
</body>
<footer class="bg-primary text-white text-center ">
    <small>Hüseyin Yılmaz B231202023</small>
</footer>

</html>